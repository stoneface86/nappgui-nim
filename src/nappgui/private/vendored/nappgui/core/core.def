/* Core library import/export */

#if defined(CORE_IMPORT)
    #if defined(__GNUC__)
        #define _core_api
    #elif defined(_MSC_VER)
        #define _core_api __declspec(dllimport)
    #else
        #error Unknown compiler
    #endif
#elif defined(NAPPGUI_SHARED_LIB)
    #if defined(__GNUC__)
        #define _core_api __attribute__((visibility("default")))
    #elif defined(_MSC_VER)
        #define _core_api __declspec(dllexport)
    #else
        #error Unknown compiler
    #endif
#else
    #define _core_api
#endif
